CREATE TABLE Student (
    StudentID    VARCHAR   PRIMARY KEY
                           NOT NULL,
    StudentName  CHAR (30) NOT NULL,
    Password     CHAR (30) NOT NULL,
    StatisticsTS INTEGER,
    EnglishTS    INTEGER,
    ScienceTS    INTEGER
);

CREATE TABLE Topic (
    TopicID     VARCHAR (30) PRIMARY KEY
                             NOT NULL,
    TopicName   CHAR (30)    NOT NULL,
    TopScore    INTEGER,
    QuestionSet VARCHAR (30) NOT NULL
);

CREATE TABLE Student_Topic (
    StudentID VARCHAR REFERENCES Student (StudentID),
    TopicID   VARCHAR REFERENCES Topic (TopicID) 
);
